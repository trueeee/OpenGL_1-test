{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "OpenGLBuild",
            "command": "C:\\ucrt64\\bin\\g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "-I{workspaceFolder}/lib",
                "-L{workspaceFolder}/include",
                "${file}",
                "${fileDirname}\\*.h",
                "${fileDirname}\\*.cpp",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe",
                "-I",
                "-IC:/DEV/OpenGL_1/imgui",
                "C:\\glfw-3.3.8.bin.WIN64\\include",
                "-I",
                "C:\\glew-2.1.0\\include",
                "-L",
                "C:\\glew-2.1.0\\lib\\Release\\x64",
                "-L",
                "C:\\glfw-3.3.8.bin.WIN64\\lib-mingw-w64",
                "-lglfw3dll",
                "-lglew32",
                "-lopengl32",
                "&&",
                "copy",
                "C:\\glfw-3.3.8.bin.WIN64\\lib-mingw-w64\\glfw3.dll",
                "${fileDirname}",
                "&&",
                "start",
                "cmd",
                "/K",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "Task generated by Debugger."
        },
        {
            "type": "cmake",
            "label": "CMake: build",
            "command": "build",
            "targets": [
                "OpenGL/ImGUITest"
            ],
            "preset": "${command:cmake.activeBuildPresetName}",
            "group": "build",
            "problemMatcher": [],
            "detail": "CMake template build task"
        }
    ],
    "version": "2.0.0"
}